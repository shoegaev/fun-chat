{
  "compilerOptions": {
    "outDir": "./dist/",
    "strict": true, 
    "module": "ESNext",
    "target": "ES2017",
    "jsx": "react",
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "exclude": ["node_modules"],
}
